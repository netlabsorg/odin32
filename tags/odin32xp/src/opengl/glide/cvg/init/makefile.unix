# local defines, options, includes
LCDEFS   = -DINIT_LINUX
LCOPTS   =
LCINCS	 = -I$(BUILD_ROOT)/cvg/include -I$(BUILD_ROOT_SWLIBS)/include 

# sources
HEADERS	            = sst1init.h
INSTALL_DESTINATION = $(BUILD_ROOT)/cvg
CFILES	            = sst1init.c info.c print.c parse.c gamma.c util.c \
                      sli.c video.c dac.c gdebug.c

SUBLIBRARIES        = $(BUILD_ROOT_SWLIBS)/lib/libfxpci.a

ifeq ($(FX_DLL_BUILD_INIT),1)
FX_DLL_LIBRARY  = 1
endif

# targets
LIBRARIES      = libsst1init.a
RCFILE         = init.rc

include $(BUILD_ROOT_SWLIBS)/include/make/3dfx.mak

init.res: rcver.h
sst1init.obj: rcver.h

#
# This library must be compiled without the big optimization options
# for some strange reason
#
ifndef DEBUG
CFLAGS = -g -O -m486 -fomit-frame-pointer $(GCFLAGS) $(LCFLAGS) $(VCFLAGS)
endif
