#
# Tools
#
CC=icc
AS=alp
CXX=icc
LD=icc
IMPLIB=implib

#
# Tool Flags
#
CFLAGS = -Q  -Si -Ti -Ge- -Ss+ -W3 -Gm+ /Gn+ -I$(PDWIN32_INCLUDE)\Win -D__WIN32OS2__  -D__WINE__
CXXFLAGS = -Q  -Si -Ti -Ge- -Ss+ -W3 -Gm+ -I$(PDWIN32_INCLUDE)\Win -D__WIN32OS2__ -D__WINE__
ASFLAGS = -Sc -Sv:M510
LDFLAGS = -Q  -Si -Ti -Ge- -Ss+ -W3 -Gm+ /B"/noe /NOD"
IMPLIBFLAGS = /nologo


#
# System Utilites
#
RM = rm -f
CP = copy
MKDIR = mkdir
ECHO = echo


#
# Targets
#
.c.obj:
        $(CC) $(CFLAGS) -DDEBUG -c $<

.cpp.obj:
        $(CXX) $(CXXFLAGS) -DDEBUG -c $<

.asm.obj:
        $(AS) $(ASFLAGS) $<



